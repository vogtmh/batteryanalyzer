<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Dual Health Title -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Reported Health -->
                    <LinearLayout
                        android:id="@+id/layoutReportedHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivReportedHealth"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_android" />

                        <TextView
                            android:id="@+id/tvReportedHealthTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="100%" />
                    </LinearLayout>

                    <!-- Calculated Health -->
                    <LinearLayout
                        android:id="@+id/layoutCalculatedHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivCalculatedHealth"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_calculator" />

                        <TextView
                            android:id="@+id/tvCalculatedHealthTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="98.5%" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Logfile Date Subtitle -->
                <TextView
                    android:id="@+id/tvLogfileDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="Jan 21, 2026 4:06 PM" />
            </LinearLayout>

            <!-- Expand/Collapse Arrow -->
            <TextView
                android:id="@+id/expandArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â–¼"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:contentDescription="Expand/Collapse" />

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="?android:attr/textColorSecondary"
                android:contentDescription="@string/history_delete" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="?android:attr/dividerHorizontal"
            android:visibility="gone" />

        <!-- Battery Info List (Single Column) -->
        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Reported Health -->
            <LinearLayout
                android:id="@+id/reportedHealthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/reported_health_label"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvReportedHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="100%" />
            </LinearLayout>

            <!-- Calculated Health -->
            <LinearLayout
                android:id="@+id/calculatedHealthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/calculated_health_label"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCalculatedHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="98.2%" />
            </LinearLayout>

            <!-- Current Capacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_capacity"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCurrentCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="4937 mAh" />
            </LinearLayout>

            <!-- Typical Capacity (Marketing) -->
            <LinearLayout
                android:id="@+id/typicalCapacityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/typical_capacity"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTypicalCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="5000 mAh" />
            </LinearLayout>

            <!-- Rated Capacity (Scientific) -->
            <LinearLayout
                android:id="@+id/ratedCapacityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rated_capacity"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRatedCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="4855 mAh" />
            </LinearLayout>
            
            <!-- Cycle Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cycle_count"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCycleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="438" />
            </LinearLayout>

            <!-- State of Charge -->
            <LinearLayout
                android:id="@+id/socLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/state_of_charge"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStateOfCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="57%" />
            </LinearLayout>

            <!-- First Use Date -->
            <LinearLayout
                android:id="@+id/firstUseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Used"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvFirstUseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="Mar 13, 2024" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
